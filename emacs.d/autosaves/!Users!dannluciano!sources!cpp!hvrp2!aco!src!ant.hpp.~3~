#ifndef _ANT_HPP_
#define _ANT_HPP_

#include <iostream>
#include <iomanip>
#include <vector>
#include "customer.hpp"
#include "type_vehicle.hpp"
#include "instance.hpp"

class Ant
{
private:
		std::vector<Customer> customers;
		std::vector<TypeVehicle> vehicles;
		std::vector<bool> routes;
    
public:
		Ant();
    Ant(const Customer& customer);
    Ant(const Ant& ant);
    virtual ~Ant();

		std::vector<Customer>& GetCustomers();
		std::vector<TypeVehicle>& GetTypeOfVehicles();
		std::vector<bool>& GetRoutes();

		friend std::ostream& operator<<(std::ostream&, Ant& ant);
		
};

#endif /* _ANT_HPP_ */
